<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">
    <item android:drawable="@android:color/white"/>

    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="500dp"
                android:startColor="#F79970"
                android:centerX="1.0"
                android:centerY="0.5">
            </gradient>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="400dp"
                android:startColor="#FAB94B"
                android:centerX="0.5"
                android:centerY="0.2">
            </gradient>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="600dp"
                android:startColor="#F8FA27"
                android:centerX="0.2"
                android:centerY="0.8">
            </gradient>
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_app_foreground"
        android:width="250dp"
        android:height="250dp"
        android:gravity="center" />
</layer-list>
